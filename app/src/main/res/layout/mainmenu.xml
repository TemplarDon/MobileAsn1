<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mobile_mainmenu"
    tools:context="com.sidm.mgp_lab02_153492y.Mainmenu">


    <Button
        android:id="@+id/btn_option"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginRight="101dp"
        android:background="@drawable/button"
        android:text="Option"
        android:textSize="18dp"
        android:textColor="#bdfcf2"
        android:layout_above="@+id/btn_help"
        android:layout_alignStart="@+id/btn_help" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:text="Start"
        android:textSize="18dp"
        android:textColor="#bdfcf2"
        android:layout_above="@+id/btn_option"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_height="wrap_content"
        android:text="Rooftop Runners"
        android:textSize="50dp"
        android:textColor="#bdfcf2"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/btn_start"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_help"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginRight="101dp"
        android:background="@drawable/button"
        android:text="Help"
        android:textSize="18dp"
        android:textColor="#bdfcf2"
        android:layout_marginBottom="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_start" />


</RelativeLayout>
