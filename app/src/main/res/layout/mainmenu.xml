<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mobile_mainmenu"
    tools:context="com.sidm.mgp_lab02_153492y.Mainmenu">

    <TextView
        android:layout_height="wrap_content"
        android:background="@drawable/title"
        android:typeface = "monospace"
        android:textSize="50dp"
        android:textColor="#bdfcf2"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/btn_start"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/start_button"
        android:textSize="18dp"
        android:textColor="#bdfcf2"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/btn_highScore"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_highScore"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/highscore_button"
        android:textSize="18dp"
        android:textColor="#bdfcf2"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/btn_option"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_option"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginRight="101dp"
        android:background="@drawable/options_button"
        android:textSize="18dp"
        android:textColor="#bdfcf2"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/btn_help"
        android:layout_alignStart="@+id/btn_help" />

    <Button
        android:id="@+id/btn_help"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginRight="101dp"
        android:background="@drawable/help_button"
        android:textSize="18dp"
        android:textColor="#bdfcf2"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_start" />


    <Button
        android:id="@+id/btn_quit"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/quit_button"
        android:textSize="18dp"
        android:textColor="#bdfcf2"
        android:layout_alignBottom="@+id/btn_help"
        android:layout_toRightOf="@+id/btn_help" />

</RelativeLayout>
